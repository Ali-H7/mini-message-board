<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Message Board</title>
    <script src="https://kit.fontawesome.com/f763e9ac42.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <%- include('header') %>

    <div class="body-container">
      <div class="btn-container">
        <a href="/new"
          ><button class="add-btn"><i class="fa-solid fa-plus"></i> Add New Message</button></a
        >
      </div>
      <ul class="messages">
        <% for (let i = messages.length - 1; i >= 0 ; i--) { %>
        <li class="message">
          <div class="user">
            <%- include('icon') %>
            <div class="title-container">
              <div class="name-title">
                <p class="name"><%=messages[i].user_name%></p>
                <a href="/msg/<%=i + 1%>"><i class="fa-solid fa-ellipsis details-icon"></i></a>
              </div>
              <div class="user-handle">
                <p>
                  @<%=messages[i].user_name.toLowerCase().replaceAll(' ', '_')%> Â· <%=formatDate(messages[i].date)%>
                </p>
              </div>
            </div>
          </div>
          <div class="message-content">
            <p><%= messages[i].user_text%></p>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
